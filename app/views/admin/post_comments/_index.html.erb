<% comments.each do |comment| %>
  <table class='table mx-auto table-bordered col-10'>
    <tbody>
      <tr>
        <td class="text-center thead-bg">
          <%= link_to admin_customer_path(comment.customer_id), class:"py-3 link-color" do %>
            <%= image_tag comment.customer.get_profile_image, size: '50x50' %>
            <%= comment.customer.name %>
          <% end %>
          <% if defined? index %>
            <%= link_to "投稿へ", admin_post_path(comment.post.id), class: "btn btn-sm btn-success" %>
          <% else %>
            <%= link_to "削除", admin_post_post_comment_path(comment.post, comment,page: params[:page]), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td><%= comment.comment %></td>
      </tr>
      <tr>
        <td class="text-right">
          <%= comment.created_at.to_s(:datetime_jp) %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>