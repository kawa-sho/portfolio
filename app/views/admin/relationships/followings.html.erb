<% if @customers.exists? %>
  <div class='container px-5 px-sm-0'>
    <div class="row mt-5">
      <h2 class="midashi"><%= @customer.name %>のフォロー一覧</h2>
    </div>
    <div class='row mt-5'>
      <%= render 'admin/customers/index', customers: @customers %>
    </div>
    <%= paginate @customers %>
  </div>
<% else %>
  <h2 class="deta-none">フォローをしている会員がいません</h2>
<% end %>