<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>会員編集</h2>
    <%= form_with model:@customer, url: admin_customer_path, method: :patch do |f| %>
      <%= render 'layouts/errors', obj: @customer %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
     <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :profile_image, class: "form-control-file", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "無効" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
      <div>
        <%= link_to "投稿を全部削除する", admin_customer_destroy_all_path(@customer), method: :delete, data: { confirm: '本当に消しますか？' }, class: 'btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>