<div class='container px-5 px-sm-0'>
  <div class="row mt-5">
    <h2 class="midashi">グループ詳細ページ</h2>
  </div>
  <table class='table mx-auto table-bordered col-10'>
  	<tbody>
      <tr>
        <td class="text-center thead-bg">
          <%= link_to admin_group_path(@group.id), class:"py-3 link-color" do %>
            <%= image_tag @group.get_group_image, size: '50x50' %>
            <%= @group.name %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td><%= @group.introduction %></td>
      </tr>
      <tr>
        <% unless @group.tag_groups.count == 0 %>
          <td>
            <% @group.tag_groups.each do |tag| %>
              <%= link_to admin_group_tag_search_path(tag_group_id: tag.id), class: "btn btn-tag my-1" do%>
                <%= tag.name %>
              <% end %>
            <% end %>
          </td>
        <% end %>
      </tr>
      <tr>
        <td class="text-right">
          <%= render 'admin/group_favorites/favorite', group: @group %>
          <%= link_to "削除", admin_group_path(@group), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %>
        </td>
      </tr>
      <tr>
        <td class="text-right">
          更新日時：<%= @group.updated_at.to_s(:datetime_jp) %>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="col-10 offset-1 mt-2 text-right">
    <%= link_to "ルームに入る", admin_group_room_path(group_id: @group), class: "btn btn-success" %>
  </div>
  <div class="row col-12">
    <h3 class="midashi my-3 mx-auto">オーナー</h3>
  </div>
  <div class='row m-auto'>
    <%= render "admin/customers/index", customers: @customers %>
  </div>
</div>