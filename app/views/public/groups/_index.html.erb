<table class='table m-auto col-md-10 col-12'>
      <thead>
        <tr class="thead-bg">
          <th class="col-1">グループ名</th>
          <th class="col-4"></th>
          <th class="col-5 none">グループ紹介</th>
        </tr>
      </thead>
      <tbody>
        <% groups.each do |group| %>
          <tr onclick="window.location.href='<%= group_path(group) %>'" onmouseover="this.style.backgroundColor='#c2ebf2'" onmouseout="this.style.backgroundColor='#f0fcff'">
            <td>
              <%= image_tag group.get_group_image, size: '70x70' %>
            </td>
            <td>
              <h5 class="col-9">
                <%= group.name %>
              </h5>
            </td>
            <td class="none">
              <%= group.introduction %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>