<% if post.post_favorited_by?(current_customer) %>
    <%= link_to "♥",post_post_favorites_path(post), method: :delete, remote: true, class: "favorite-red" %>
<% else %>
    <%= link_to "♥", post_post_favorites_path(post), method: :post, remote: true, class: "favorite-black" %>
<% end %>
<%= link_to "#{post.post_favorites.count}いいね", post_post_favorites_path(post), class: "btn btn-favorite" %>