<%= render 'layouts/errors', obj: @customer %>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="text-center py-2 midashi my-5">会員編集</h2>
      <%= form_with model:@customer do |f| %>
        <div class="form-group row mb-4">
          <%= f.label :name, "ニックネーム", class: "col-5 my-auto" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-7 form-control", placeholder: "ゴンザレス" %>
        </div>
        <div class="form-group row">
          <%= f.label :image, "プロフィール画像", class: "col-12 my-auto" %>
        </div>
        <div class="row mb-4">
          <%= f.file_field :profile_image, class: "form-control-file offset-5 col-8", accept: 'image/*' %>
        </div>
        <div class="form-group row">
          <%= f.label :introduction, "自己紹介", class: "col-5 my-auto" %>
        </div class="row">
        <%= f.text_area :introduction,size: "10x5", class: "form-control introduction" %>
        <div class="form-group my-4 text-right">
          <%= f.submit class: 'btn btn-success py-2 px-3 mb-5 mt-2' %>
        </div>
        <div class="text-center mt-5">
          <%= link_to "投稿を全部削除する", posts_destroy_all_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: 'btn btn-danger py-2 px-3' %>
          <%= link_to "退会する", customer_quit_check_path(current_customer), class: 'btn btn-danger py-2 px-3 offset-md-3' %>
        </div>
      <% end %>
    </div>
  </div>
</div>