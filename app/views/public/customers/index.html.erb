<div class='container px-5 px-sm-0'>
  <div class="row mt-5">
    <h2 class="midashi">会員一覧ページ</h2>
  </div>
  <%= form_with url: customer_search_path, method: :get do |f| %>
    <div class="row mb-2 mx-auto">
      <%= f.text_field :keyword, value: @keyword, class: "form-control offset-md-7 offset-1 col-md-3 col-7", placeholder: "会員を検索" %>
      <%= f.submit "検索", class: "ml-1" %>
    </div>
  <% end %>
  <% if @keyword %>
    <div class='row'>
      <h5 class="text-center offset-8 col-4"><%= @keyword %>で検索中</h5>
    </div>
  <% end %>
  <div class='row m-auto'>
    <%= render "public/customers/index", customers: @customers %>
  </div>
    <%= paginate @customers %>
</div>