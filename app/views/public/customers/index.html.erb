<div class='container px-5 px-sm-0'>
  <div class="row mt-5">
    <h2 class="midashi">会員一覧ページ</h2>
  </div>
  <%= form_with url: customer_search_path, method: :get do |f| %>
    <div class="row mb-2 mx-auto">
      <%= f.text_field :keyword, value: @keyword, class: "form-control offset-md-7 offset-1 col-md-3 col-7", placeholder: "会員を検索" %>
      <%= f.submit "検索", class: "ml-1" %>
    </div>
  <% end %>
  <% if @keyword %>
    <div class='row'>
      <h5 class="text-center offset-8 col-4"><%= @keyword %>で検索中</h5>
    </div>
  <% end %>
  <div class='row m-auto'>
    <table class='table m-auto col-10'>
      <thead>
        <tr class="thead-bg">
          <th class="col-1">会員</th>
          <th class="col-4"></th>
          <th class="col-5 none">自己紹介</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr onclick="window.location.href='<%= customer_path(customer) %>'" onmouseover="this.style.backgroundColor='#c2ebf2'" onmouseout="this.style.backgroundColor='#f0fcff'">
            <td>
              <%= image_tag customer.get_profile_image, size: '70x70' %>
            </td>
            <td>
              <h5 class="col-9 d-flex align-items-center">
                <%= customer.name %>
              </h5>
            </td>
            <td class="none">
              <%= customer.introduction %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
    <%= paginate @customers %>
</div>