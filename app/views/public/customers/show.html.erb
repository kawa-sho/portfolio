<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div>
      <h4><%= @customer.name %>のページ</h4>
    </div>
  </div>
  <div class="row">
    <div>
      <table class="table">
        <tbody>
          <tr>
            <td>ニックネーム</td>
            <td><%= @customer.name %></td>
          </tr>
          <tr>
            <td>プロフィール画像</td>
            <td><%= image_tag @customer.get_profile_image, size: '50x50' %></td>
          </tr>
          <tr>
            <td>自己紹介</td>
            <td><%= @customer.introduction %></td>
          </tr>
          <% if @customer == current_customer %>
            <% if @customer.name != "guestcustomer" %>
              <tr>
                <td><%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-block btn-success" %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class='row'>
    <table class='table'>
      <thead>
        <tr>
          <th>プロフィール画像</th>
          <th>ニックネーム</th>
          <th>投稿</th>
          <th colspan="1"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= image_tag post.customer.get_profile_image, size: '50x50' %></td>
            <td><%= post.customer.name %></td>
            <td><%= post.post %></td>
          </tr>
        <% end %>
        <%= paginate @posts %>
      </tbody>
    </table>
  </div>

</div>