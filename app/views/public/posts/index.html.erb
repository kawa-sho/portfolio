<div class='container px-5 px-sm-0'>
  <h2>投稿一覧ページ</h2>
  <div class="row search-form">
    <%= form_with url: post_search_path, method: :get do |f| %>
      <%= f.text_field :keyword, value: @keyword %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
  <div class='row'>
    <% if @keyword %>
      <h5><%= @keyword %>で検索中</h5>
    <% end %>
  </div>
  <div class='row'>
    <% @tags.each do |tag|%>
      <%= tag.name %>
      <%="(#{tag.posts.count})" %>
    <% end %>
  </div>
  <div class='row'>
    <%= render 'public/posts/index', posts: @posts %>
  </div>
</div>