<%= form_with model:post do |f| %>

  <div class="form-group">
    <%= f.label :post,"投稿" %>
    <%= f.text_area :post, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label"タグ (,で区切ると複数タグ登録できます)" %>
    <%= f.text_field :name,value: post.tag_posts.pluck(:name).join(','),class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>

<% end %>